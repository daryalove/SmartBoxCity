<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    android:background="@drawable/activity_stili"
    android:id="@+id/about_us_layout">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation = "vertical">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text = "Инженерно-консультационный центр «Мысль» НГТУ"
               android:gravity = "center"
               android:textStyle = "normal"
               android:textSize = "16dp"
               android:textColor = "#2C4C46"
               android:padding = "10dp"
               android:id ="@+id/TextAboutUsTop"
            />
            <View
                android:layout_width="match_parent"
                android:layout_marginTop = "3dp"
                android:layout_height="2dp"
                android:layout_marginLeft = "30dp"
                android:layout_marginRight = "30dp"
                android:background = "#A2A5A4"
                android:id = "@+id/ViewAboutUs"/>
            <TextView
                android:text=""
                android:textColor = "#475B57"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TextAboutUs" />
            

        </LinearLayout>
        </ScrollView>

    <ProgressBar
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/loader"
        />
</RelativeLayout>