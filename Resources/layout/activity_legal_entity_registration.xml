<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ui.login.LoginActivity">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"> 
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight = "8dp"
            >
            <RelativeLayout
                android:id="@+id/fioBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
               
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "Регистрация"
                    android:padding="10dp"
                    android:textSize="15sp"
                    android:id = "@+id/textHeading"
                    android:layout_centerHorizontal = "true"
                />
               
                <TextView
                    android:id="@+id/textfrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:layout_below = "@+id/textHeading"
                    android:padding="10dp"
                    android:text="Email:"
                    android:textSize="15sp"
                   
                    />

                <EditText
                    android:id="@+id/s_edit_from"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/textfrom"
                    android:layout_toRightOf="@+id/textfrom"
                    android:layout_below = "@+id/textHeading"
                    android:inputType="text"
                    android:layout_marginTop="8dp"
                    android:padding="8dp"
                    android:background = "@drawable/edittext_stili"
                    android:textSize="9sp"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/textWhere"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:layout_below = "@+id/textfrom"
                    android:padding="10dp"
                    android:text="Телефон:"
                    android:textSize="15sp"
                   
                    />

                <EditText
                    android:id="@+id/s_edit_where"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/textWhere"
                    android:layout_toRightOf="@+id/textWhere"
                    android:layout_below = "@+id/s_edit_from"
                    android:inputType="text"
                    android:layout_marginTop="13dp"
                    android:padding="8dp"
                    android:background = "@drawable/edittext_stili"
                    android:textSize="9sp"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/TextShipmentTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:layout_below = "@+id/textWhere"
                    android:padding="10dp"
                    android:text="Пароль:"
                    android:textSize="15sp"
                   
                    />

                <EditText
                    android:id="@+id/s_shipment_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/TextShipmentTime"
                    android:layout_toRightOf="@+id/TextShipmentTime"
                    android:layout_below = "@+id/s_edit_where"
                    android:inputType="text"
                    android:layout_marginTop="12dp"
                    android:padding="8dp"
                    android:background = "@drawable/edittext_stili"
                    android:textSize="9sp"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/TextShippingDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:layout_below = "@+id/TextShipmentTime"
                    android:padding="10dp"
                    android:text="Подтвердите пароль:"
                    android:textSize="15sp"
                   
                    />

                <EditText
                    android:id="@+id/s_shipping_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/TextShippingDate"
                    android:layout_toRightOf="@+id/TextShippingDate"
                    android:layout_below = "@+id/s_shipment_time"
                    android:inputType="text"
                    android:layout_marginTop="12dp"
                    android:padding="8dp"
                    android:background = "@drawable/edittext_stili"
                    android:textSize="9sp"
                    android:gravity="center"
                    />

              </RelativeLayout>
            <RelativeLayout
                android:id="@+id/fioBox1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below = "@+id/fioBox"
                >
               
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "Данные организации"
                    android:padding="10dp"
                    android:textSize="15sp"
                    android:id = "@+id/textHeading"
                    android:layout_centerHorizontal = "true"
                />
               
                <TextView
                    android:id="@+id/textfrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:layout_below = "@+id/textHeading"
                    android:padding="10dp"
                    android:text="Наименование:"
                    android:textSize="15sp"
                   
                    />

                <EditText
                    android:id="@+id/s_edit_from"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/textfrom"
                    android:layout_toRightOf="@+id/textfrom"
                    android:layout_below = "@+id/textHeading"
                    android:inputType="text"
                    android:layout_marginTop="8dp"
                    android:padding="8dp"
                    android:background = "@drawable/edittext_stili"
                    android:textSize="9sp"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/textWhere"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:layout_below = "@+id/textfrom"
                    android:padding="10dp"
                    android:text="Юридический адрес:"
                    android:textSize="15sp"
                   
                    />

                <EditText
                    android:id="@+id/s_edit_where"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/textWhere"
                    android:layout_toRightOf="@+id/textWhere"
                    android:layout_below = "@+id/s_edit_from"
                    android:inputType="text"
                    android:layout_marginTop="13dp"
                    android:padding="8dp"
                    android:background = "@drawable/edittext_stili"
                    android:textSize="9sp"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/TextShipmentTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:layout_below = "@+id/textWhere"
                    android:padding="10dp"
                    android:text="Время разгрузки:"
                    android:textSize="15sp"
                   
                    />

                <EditText
                    android:id="@+id/s_shipment_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/TextShipmentTime"
                    android:layout_toRightOf="@+id/TextShipmentTime"
                    android:layout_below = "@+id/s_edit_where"
                    android:inputType="text"
                    android:layout_marginTop="12dp"
                    android:padding="8dp"
                    android:background = "@drawable/edittext_stili"
                    android:textSize="9sp"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/TextINNKPP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:layout_below = "@+id/TextShipmentTime"
                    android:padding="10dp"
                    android:text="ИНН/КПП:"
                    android:textSize="15sp"
                   
                    />

                <EditText
                    android:id="@+id/s_inn_kpp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/TextINNKPP"
                    android:layout_toRightOf="@+id/TextINNKPP"
                    android:layout_below = "@+id/s_shipment_time"
                    android:inputType="text"
                    android:layout_marginTop="12dp"
                    android:padding="8dp"
                    android:background = "@drawable/edittext_stili"
                    android:textSize="9sp"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/TextOGRN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:layout_below = "@+id/TextINNKPP"
                    android:padding="10dp"
                    android:text="ОГРН:"
                    android:textSize="15sp"
                   
                    />

                <EditText
                    android:id="@+id/s_OGRN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/TextOGRN"
                    android:layout_toRightOf="@+id/TextOGRN"
                    android:layout_below = "@+id/TextINNKPP"
                    android:inputType="text"
                    android:layout_marginTop="12dp"
                    android:padding="8dp"
                    android:background = "@drawable/edittext_stili"
                    android:textSize="9sp"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/TextBank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:layout_below = "@+id/TextOGRN"
                    android:padding="10dp"
                    android:text="Банк:"
                    android:textSize="15sp"
                   
                    />

                <EditText
                    android:id="@+id/s_bank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/TextBank"
                    android:layout_toRightOf="@+id/TextBank"
                    android:layout_below = "@+id/TextOGRN"
                    android:inputType="text"
                    android:layout_marginTop="12dp"
                    android:padding="8dp"
                    android:background = "@drawable/edittext_stili"
                    android:textSize="9sp"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/TextPaymentaccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:layout_below = "@+id/TextBank"
                    android:padding="10dp"
                    android:text="Расчётный счёт:"
                    android:textSize="15sp"
                   
                    />

                <EditText
                    android:id="@+id/s_payment_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/TextPaymentaccount"
                    android:layout_toRightOf="@+id/TextPaymentaccount"
                    android:layout_below = "@+id/TextBank"
                    android:inputType="text"
                    android:layout_marginTop="12dp"
                    android:padding="8dp"
                    android:background = "@drawable/edittext_stili"
                    android:textSize="9sp"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/TextCorrespondentAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:layout_below = "@+id/TextPaymentaccount"
                    android:padding="10dp"
                    android:text="Корреспондентский счёт:"
                    android:textSize="15sp"
                   
                    />

                <EditText
                    android:id="@+id/s_correspondent_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/TextCorrespondentAccount"
                    android:layout_toRightOf="@+id/TextCorrespondentAccount"
                    android:layout_below = "@+id/TextPaymentaccount"
                    android:inputType="text"
                    android:layout_marginTop="12dp"
                    android:padding="8dp"
                    android:background = "@drawable/edittext_stili"
                    android:textSize="9sp"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/TextBIK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:layout_below = "@+id/TextCorrespondentAccount"
                    android:padding="10dp"
                    android:text="БИК"
                    android:textSize="15sp"
                   
                    />

                <EditText
                    android:id="@+id/s_bik"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/TextBIK"
                    android:layout_toRightOf="@+id/TextBIK"
                    android:layout_below = "@+id/TextCorrespondentAccount"
                    android:inputType="text"
                    android:layout_marginTop="12dp"
                    android:padding="8dp"
                    android:background = "@drawable/edittext_stili"
                    android:textSize="9sp"
                    android:gravity="center"
                    />
                <CheckBox
                    android:id ="@+id/check_personal_data_processing"
                    android:layout_below ="@+id/TextBIK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text ="Согласие на обработку персональный данных"
                    />
                <Button
                    android:id="@+id/btn_make_request"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/button_stili"
                    android:layout_below = "@+id/check_personal_data_processing"
                    android:layout_centerHorizontal ="true"
                    android:padding = "5dp"
                    android:text="Зарегистрироваться"
                    android:textSize="8sp"
                  />

              </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
    <ProgressBar
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/preloader"
        />
 </RelativeLayout>
            
