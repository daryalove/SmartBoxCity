<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background ="#C5BAB2"
    tools:context=".ui.login.LoginActivity">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"> 
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight = "8dp"           
            >

             <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop = "10dp"
                android:id="@+id/cardViewContactPersonDataEntity"
                app:cardCornerRadius="5dp"
                app:cardElevation="4dp"
                android:layout_gravity="center_horizontal">
                  <RelativeLayout
                    android:id="@+id/fioBoxEntity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingTop="16dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text = "Контактное лицо"
                            android:padding="10dp"
                            android:textSize="17sp"
                            android:textStyle ="italic"
                            android:textColor = "#F3B487"
                            android:id = "@+id/textHeading1"
                            android:layout_centerHorizontal = "true"
                        />
               
                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/LoginTextInputLayoutStyle"
                        android:layout_below = "@+id/textHeading1"
                        android:id="@+id/s_lastname_entity_layout">
                         <EditText
                            android:id="@+id/s_lastname_entity"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:inputType="text"
                            android:singleLine="true"
                            android:padding="8dp"
                            android:textSize = "14sp"
                            android:textColor="#ED8D48"
                            android:layout_marginBottom="10dp"
                            android:hint = "Фамилия"/>
                    </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/LoginTextInputLayoutStyle"
                        android:layout_below = "@+id/s_lastname_entity_layout"
                        android:id="@+id/s_name_entity_layout">
                         <EditText
                            android:id="@+id/s_name_entity"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:inputType="text"
                            android:singleLine="true"
                            android:padding="8dp"
                            android:textSize = "14sp"
                            android:textColor="#ED8D48"
                            android:layout_marginBottom="10dp"
                            android:hint = "Имя"/>
                    </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/LoginTextInputLayoutStyle"
                        android:layout_below = "@+id/s_name_entity_layout"
                        android:id="@+id/s_patronymic_entity_layout">
                         <EditText
                            android:id="@+id/s_patronymic_entity"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:inputType="text"
                            android:singleLine="true"
                            android:padding="8dp"
                            android:textSize = "14sp"
                            android:textColor="#716E6D"
                            android:layout_marginBottom="10dp"
                            android:hint = "Отчество"
                            />
                    </android.support.design.widget.TextInputLayout>
                  </RelativeLayout>
                </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cardViewgGeneralDataEntity"
                android:layout_below = "@+id/cardViewContactPersonDataEntity"
                app:cardCornerRadius="5dp"
                app:cardElevation="4dp"
                android:layout_gravity="center_horizontal"            
               >

            <RelativeLayout
                android:id="@+id/fioBoxEntity1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="16dp"  
                >
               
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "Регистрация"
                    android:padding="10dp"
                    android:textColor = "#F3B487"
                    android:textSize="17sp"
                    android:textStyle = "italic"
                    android:id = "@+id/textHeading"
                    android:layout_centerHorizontal = "true"
                />
            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/LoginTextInputLayoutStyle"
                    android:layout_below = "@+id/textHeading"
                    android:id="@+id/s_email_entity_layout">
                     <EditText
                        android:id="@+id/s_email_entity"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:inputType="text"
                        android:singleLine="true"
                        android:padding="8dp"
                        android:textSize = "14sp"
                        android:textColor="#716E6D"
                        android:layout_marginBottom="10dp"
                        android:hint = "Email"
                        />
                </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/LoginTextInputLayoutStyle"
                android:layout_below = "@+id/s_email_entity_layout"
                android:id="@+id/s_phone_entity_layout">
                 <EditText
                    android:id="@+id/s_phone_individual"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textSize = "14sp"
                    android:padding="8dp"
                    android:textColor="#716E6D"
                    android:layout_marginBottom="10dp"
                    android:hint = "Телефон"
                    />
                 </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/LoginTextInputLayoutStyle"
                android:layout_below = "@+id/s_phone_entity_layout"
                android:id="@+id/s_login_entity_layout">
                    <EditText
                    android:id="@+id/s_login_entity"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="text"
                    android:singleLine="true"
                    android:padding="8dp"
                    android:textSize = "14sp"
                    android:textColor="#716E6D"
                    android:layout_marginBottom="10dp"
                    android:hint = "Логин"
                    />
                  </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/LoginTextInputLayoutStyle"
                android:layout_below = "@+id/s_login_entity_layout"
                android:id="@+id/s_pass_entity_layout">
                 <EditText
                    android:id="@+id/s_pass_entity"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="text"
                    android:singleLine="true"
                    android:padding="8dp"
                    android:textSize = "14sp"
                    android:textColor="#716E6D"
                    android:layout_marginBottom="10dp"
                    android:hint = "Пароль"
                    />
                 </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/LoginTextInputLayoutStyle"
                android:layout_below = "@+id/s_pass_entity_layout"
                android:id="@+id/s_pass_confirmation_entity_layout">
                 <EditText
                    android:id="@+id/s_pass_confirmation_entity"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textSize = "14sp"
                    android:padding="8dp"
                    android:textColor="#716E6D"
                    android:layout_marginBottom="10dp"
                    android:hint = "Подтвердите пароль"/>
            </android.support.design.widget.TextInputLayout>

              </RelativeLayout>
                </android.support.v7.widget.CardView>
         
            <android.support.v7.widget.CardView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop = "10dp"
                        android:layout_below = "@+id/cardViewgGeneralDataEntity"
                        android:id="@+id/cardViewSpecialDataEntity"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="4dp"
                        android:layout_gravity="center_horizontal">
                    <RelativeLayout
                        android:id="@+id/fioBoxEntity2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="16dp"
                        android:paddingTop="16dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="16dp"   
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text = "Данные организации"
                            android:padding="10dp"
                            android:textSize="17sp"
                            android:textStyle ="italic"
                            android:textColor = "#F3B487"
                            android:id = "@+id/textHeading2"
                            android:layout_centerHorizontal = "true"
                        />
               
                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/LoginTextInputLayoutStyle"
                        android:layout_below = "@+id/textHeading2"
                        android:id="@+id/s_nomination_entity_layout">
                         <EditText
                            android:id="@+id/s_nomination_entity"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:inputType="text"
                            android:singleLine="true"
                            android:padding="8dp"
                            android:textSize = "14sp"
                            android:textColor="#ED8D48"
                            android:layout_marginBottom="10dp"
                            android:hint = "Наименование"/>
                    </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/LoginTextInputLayoutStyle"
                        android:layout_below = "@+id/s_nomination_entity_layout"
                        android:id="@+id/s_legal_address_entity_layout">
                         <EditText
                            android:id="@+id/s_legal_address_entity"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:inputType="text"
                            android:singleLine="true"
                            android:padding="8dp"
                            android:textSize = "14sp"
                            android:textColor="#ED8D48"
                            android:layout_marginBottom="10dp"
                            android:hint = "Юридический адрес"/>
                    </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/LoginTextInputLayoutStyle"
                        android:layout_below = "@+id/s_legal_address_entity_layout"
                        android:id="@+id/s_mailing_address_entity_layout">
                         <EditText
                            android:id="@+id/s_mailing_address_entity"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:inputType="text"
                            android:singleLine="true"
                            android:padding="8dp"
                            android:textSize = "14sp"
                            android:textColor="#716E6D"
                            android:layout_marginBottom="10dp"
                            android:hint = "Почтовый адрес"
                            />
                    </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/LoginTextInputLayoutStyle"
                        android:layout_below = "@+id/s_mailing_address_entity_layout"
                        android:id="@+id/s_INN_entity_layout">
                         <EditText
                            android:id="@+id/s_INN_entity"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:inputType="text"
                            android:singleLine="true"
                            android:padding="8dp"
                            android:textSize = "14sp"
                            android:textColor="#ED8D48"
                            android:layout_marginBottom="10dp"
                            android:hint = "ИНН"/>
                    </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/LoginTextInputLayoutStyle"
                        android:layout_below = "@+id/s_INN_entity_layout"
                        android:id="@+id/s_KPP_entity_layout">
                         <EditText
                            android:id="@+id/s_KPP_entity"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:inputType="text"
                            android:singleLine="true"
                            android:padding="8dp"
                            android:textSize = "14sp"
                            android:textColor="#ED8D48"
                            android:layout_marginBottom="10dp"
                            android:hint = "КПП"/>
                    </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/LoginTextInputLayoutStyle"
                        android:layout_below = "@+id/s_KPP_entity_layout"
                        android:id="@+id/s_OGRN_entity_layout">
                         <EditText
                            android:id="@+id/s_OGRN_entity"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:inputType="text"
                            android:singleLine="true"
                            android:padding="8dp"
                            android:textSize = "14sp"
                            android:textColor="#ED8D48"
                            android:layout_marginBottom="10dp"
                            android:hint = "ОГРН"/>
                    </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/LoginTextInputLayoutStyle"
                        android:layout_below = "@+id/s_OGRN_entity_layout"
                        android:id="@+id/s_bank_entity_layout">
                         <EditText
                            android:id="@+id/s_bank_entity"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:inputType="text"
                            android:singleLine="true"
                            android:padding="8dp"
                            android:textSize = "14sp"
                            android:textColor="#ED8D48"
                            android:layout_marginBottom="10dp"
                            android:hint = "Банк"/>
                    </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/LoginTextInputLayoutStyle"
                        android:layout_below = "@+id/s_bank_entity_layout"
                        android:id="@+id/s_payment_account_layout">
                         <EditText
                            android:id="@+id/s_payment_account_entity"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:inputType="text"
                            android:singleLine="true"
                            android:padding="8dp"
                            android:textSize = "14sp"
                            android:textColor="#ED8D48"
                            android:layout_marginBottom="10dp"
                            android:hint = "Расчётный счёт"/>
                    </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/LoginTextInputLayoutStyle"
                        android:layout_below = "@+id/s_payment_account_layout"
                        android:id="@+id/s_correspondent_account_entity_layout">
                         <EditText
                            android:id="@+id/s_correspondent_account_entity"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:inputType="text"
                            android:singleLine="true"
                            android:padding="8dp"
                            android:textSize = "14sp"
                            android:textColor="#ED8D48"
                            android:layout_marginBottom="10dp"
                            android:hint = "Корреспондентский счёт"/>
                    </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/LoginTextInputLayoutStyle"
                        android:layout_below = "@+id/s_correspondent_account_entity_layout"
                        android:id="@+id/s_BIK_entity_layout">
                         <EditText
                            android:id="@+id/s_BIK_entity"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:inputType="text"
                            android:singleLine="true"
                            android:padding="8dp"
                            android:textSize = "14sp"
                            android:textColor="#ED8D48"
                            android:layout_marginBottom="10dp"
                            android:hint = "БИК"/>
                    </android.support.design.widget.TextInputLayout>

                    <CheckBox
                        android:text="Согласие на обработку персональных данных"
                        android:textColor = "#6D6969"
                        android:textSize = "10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/check_personal_data_processing_entity"
                        android:layout_below = "@+id/s_BIK_entity_layout"/>
                    <CheckBox
                        android:text="Согласие с договором офертой"
                        android:textColor = "#6D6969"
                        android:textSize = "10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/check_contract_oferta_entity"
                        android:layout_below = "@+id/check_personal_data_processing_entity"/>

                      </RelativeLayout>
                    </android.support.v7.widget.CardView>
              <Button
                    android:id="@+id/btn_make_request"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/button_stili"
                    android:textColor = "#FBF8F8"
                    android:layout_below = "@+id/cardViewSpecialDataEntity"
                    android:layout_centerHorizontal ="true"
                    android:text="Зарегистрироваться"
                    android:textSize="10sp"/>

        </RelativeLayout>
    </ScrollView>
    <ProgressBar
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/preloader"
        />
 </RelativeLayout>