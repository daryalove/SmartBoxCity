<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
	android:layout_margin="10dp"
    android:layout_height="match_parent">
	
	<android.support.v7.widget.CardView                                         
		android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
		android:id="@+id/cardViewAlarm"
        android:layout_marginTop="15dp"
		app:cardCornerRadius="2dp"
        app:contentPadding="10dp"
        android:layout_gravity="center_horizontal">

		<RelativeLayout
            android:layout_width="match_parent"
			android:orientation="horizontal"
            android:layout_height="wrap_content">
			<LinearLayout
                android:layout_width="wrap_content"
				android:orientation="vertical"
				android:id="@+id/linear_alarm"
                android:layout_height="wrap_content">

				<TextView
                    android:layout_width="wrap_content"
					android:id="@+id/txt_title_alarm"
					android:textSize="19sp"
					android:textStyle="bold"
					android:textColor="@color/colorMainBlue"
					android:text="00000000002"
                    android:layout_height="wrap_content"/>

				<TextView
                    android:layout_width="200dp"
					android:id="@+id/txt_alarm_description"
					android:textSize="15sp"
					android:textStyle="normal"
					android:text="Протечка жидкости"
                    android:layout_height="wrap_content"/>

				<TextView
                    android:layout_width="wrap_content"
					android:id="@+id/txt_alarm_date"
					android:textSize="15sp"
					android:textStyle="normal"
					android:text="17:12 20.05.2020"
                    android:layout_height="wrap_content"/>

				</LinearLayout>

			<Button
                android:layout_width="wrap_content"
				android:textColor="@color/colorMainLightBlue"
                android:background="@drawable/button_cancel"
                android:id="@+id/btn_get_alarm"
				android:layout_alignParentRight="true"
				android:text="Признать"
				android:layout_centerInParent="true"
                android:layout_height="40dp"/>
		</RelativeLayout>
		
		
	</android.support.v7.widget.CardView>

	<View
        android:stateListAnimator="@null"                  
		android:layout_width="fill_parent"
		android:layout_height="1dp"
	    android:id="@+id/view4"
		android:layout_marginTop="8dp"
	    android:background="#CCCCCC"/>
	
</LinearLayout>