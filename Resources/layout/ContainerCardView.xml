<FrameLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/CardViewContainer"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation = "vertical">           
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin = "10dp">          

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation = "horizontal"
                    android:id = "@+id/ContainerLinearId"
                    android:layout_marginBottom = "8dp"
                    android:baselineAligned="true">
                    <TextView
                        android:text="Id :"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor = "@color/textclient"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:id="@+id/ContainerCardTextId" />
                    <TextView
                        android:text="00000000001"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity = "center"
                        android:gravity = "center"
                        android:layout_marginLeft = "10dp"               
                        android:id="@+id/ContainerCardTextIdValue" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft = "20dp"
                    android:orientation = "vertical"
                    android:id = "@+id/ContainerLinearOrder"
                    android:layout_below = "@+id/ContainerLinearId">
                    <TextView
                        android:text="Заказ"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor = "@color/textclient"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity = "center"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:id="@+id/ContainerCardTextOrder" />
                    <TextView
                        android:text="Без заказа"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity = "center"            
                        android:id="@+id/ContainerCardTextOrderValue" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight = "20dp"
                    android:orientation = "vertical"
                    android:layout_alignParentRight = "true"
                    android:id = "@+id/ContainerLinearState"
                    android:layout_below = "@+id/ContainerLinearId">
                    <TextView
                        android:text="Состояние"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor = "@color/textclient"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity = "center"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:id="@+id/ContainerCardTextState" />
                    <TextView
                        android:text="Сложен"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity = "center"            
                        android:id="@+id/ContainerCardTextStateValue" />
                </LinearLayout>

                <TextView
                    android:text="Датчики"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor = "@color/textclient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal = "true"
                    android:layout_below = "@+id/ContainerLinearOrder"
                    android:id="@+id/ContainerCardTextSensorsCenter" />

                <HorizontalScrollView
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding = "5dp"
                    android:id="@+id/ContainerCardScrollSensors" 
                    android:layout_below = "@+id/ContainerCardTextSensorsCenter">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation = "horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation = "vertical">
                            <TextView
                                android:text="Батарея, %"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minWidth="25px"
                                android:minHeight="25px"
                                android:id="@+id/ContainerCardTexBattery" />
                            <TextView
                                android:text="неизвестно"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity = "center"
                                android:id="@+id/ContainerCardTexBatteryValue" />
                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft = "5dp"
                            android:layout_marginTop = "5dp"
                            android:layout_marginBottom = "5dp"
                            android:background = "@color/colorView"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft = "7dp"
                            android:orientation = "vertical">
                            <TextView
                                android:text="Вес, кг"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minWidth="25px"
                                android:minHeight="25px"
                                android:id="@+id/ContainerCardTexWeight" />
                            <TextView
                                android:text="101.0"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity = "center"
                                android:id="@+id/ContainerCardTexWeightValue" />
                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft = "5dp"
                            android:layout_marginTop = "5dp"
                            android:layout_marginBottom = "5dp"
                            android:background = "@color/colorView"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft = "7dp"
                            android:orientation = "vertical">
                            <TextView
                                android:text="Температура, C°"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minWidth="25px"
                                android:minHeight="25px"
                                android:id="@+id/ContainerCardTexTemperature" />
                            <TextView
                                android:text="39.4"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity = "center"
                                android:id="@+id/ContainerCardTextTemperatureValue" />
                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft = "5dp"
                            android:layout_marginTop = "5dp"
                            android:layout_marginBottom = "5dp"
                            android:background = "@color/colorView"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft = "7dp"
                            android:orientation = "vertical">
                            <TextView
                                android:text="Влажность, %"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minWidth="25px"
                                android:minHeight="25px"
                                android:id="@+id/ContainerCardTexHumidity" />
                            <TextView
                                android:text="81.4"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity = "center"
                                android:id="@+id/ContainerCardTextHumidityValue" />
                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft = "5dp"
                            android:layout_marginTop = "5dp"
                            android:layout_marginBottom = "5dp"
                            android:background = "@color/colorView"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft = "7dp"
                            android:orientation = "vertical">
                            <TextView
                                android:text="Освещенность, лм"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minWidth="25px"
                                android:minHeight="25px"
                                android:id="@+id/ContainerCardTexIllumination" />
                            <TextView
                                android:text="неизвестно"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity = "center"
                                android:id="@+id/ContainerCardTextIlluminationValue" />
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop = "10dp"
                    android:layout_marginLeft = "20dp"
                    android:orientation = "vertical"
                    android:id = "@+id/ContainerLinearRoleta"
                    android:layout_below = "@+id/ContainerCardScrollSensors">
                    <TextView
                        android:text="Ролета"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor = "@color/textclient"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity = "center"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:id="@+id/ContainerCardTextRoleta" />
                    <TextView
                        android:text="Закрыта"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity = "center"            
                        android:id="@+id/ContainerCardTextRoletaValue" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop = "10dp"
                    android:layout_marginRight = "20dp"
                    android:orientation = "vertical"
                    android:layout_alignParentRight = "true"
                    android:id = "@+id/ContainerLinearCastle"
                    android:layout_below = "@+id/ContainerCardScrollSensors">
                    <TextView
                        android:text="Замок"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor = "@color/textclient"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity = "center"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:id="@+id/ContainerCardTextCastle" />
                    <TextView
                        android:text="Закрыт"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity = "center"            
                        android:id="@+id/ContainerCardTextCastleValue" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop = "10dp"
                    android:layout_marginRight = "20dp"
                    android:orientation = "vertical"
                    android:layout_centerHorizontal = "true"
                    android:id = "@+id/ContainerLinearEvents"
                    android:layout_below = "@+id/ContainerLinearRoleta">
                    <TextView
                        android:text="События"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor = "@color/textclient"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity = "center"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:id="@+id/ContainerCardTextEvents" />
                    <TextView
                        android:text="151 штука"
                        android:textColor = "#7062F8"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity = "center"            
                        android:id="@+id/ContainerCardTextEventsValue" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation = "horizontal"
                    android:layout_below = "@+id/ContainerLinearEvents"
                    android:id = "@+id/ContainerLinearAnxiety"
                    android:layout_marginBottom = "8dp"
                    android:baselineAligned="true">
                    <TextView
                        android:text="Тревога :"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor = "@color/textclient"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:id="@+id/ContainerCardTextAnxiety" />
                    <TextView
                        android:text="Протечка жидкости 14:10 13.04.2020"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity = "center"
                        android:gravity = "center"
                        android:layout_marginLeft = "10dp"               
                        android:id="@+id/ContainerCardTextAnxietyValue" />
                </LinearLayout>                                 

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation = "horizontal">
                 <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text = "Разложить"
                    android:layout_weight = "1"
                    android:layout_gravity = "center"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:id="@+id/button1" />
                 <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text = "Разложить"
                    android:layout_weight = "1"
                    android:layout_gravity = "center"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:id="@+id/button1" />
                 <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight = "1"
                    android:layout_gravity = "center"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:id="@+id/button1" />
                 <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight = "1"
                    android:layout_gravity = "center"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:id="@+id/button1" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>