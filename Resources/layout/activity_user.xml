<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    android:background = "@drawable/activity_stili"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ui.login.LoginActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id = "@+id/scrollView1"
        android:minHeight = "25px"
        android:minWidth = "25px">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cardView1"
                app:cardCornerRadius="5dp"
                app:cardElevation="4dp"
                android:layout_gravity="center_horizontal">

                <RelativeLayout
                    android:id="@+id/fioBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textUser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:padding="10dp"
                        android:text="Вы вошли как:"
                        android:textSize="15sp"

                        />

                    <EditText
                        android:id="@+id/s_user"
                        android:layout_width="83dp"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/textUser"
                        android:layout_toRightOf="@+id/textUser"
                        android:inputType="text"
                        android:layout_marginTop="8dp"
                        android:padding="8dp"
                        android:background = "@drawable/edittext_stili"
                        android:text="Клиент"
                        android:textSize="9sp"
                        android:gravity="center"
                        />


                    <Button
                        android:id="@+id/btn_exit_"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/button_stili"
                        android:padding = "5dp"
                        android:layout_toEndOf="@+id/s_user"
                        android:layout_toRightOf="@+id/s_user"
                        android:text="Сделать фото"
                        android:textSize="8sp"
                        />

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:layout_below="@+id/textUser"
                        android:layout_marginTop="0dp"
                        android:padding="10dp"
                        android:text="Заказ:"
                        android:textSize="15sp"
                        />

                    <EditText
                        android:id="@+id/container_name"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/s_user"
                        android:layout_toEndOf="@+id/text1"
                        android:layout_toRightOf="@+id/text1"
                        android:gravity="center"
                        android:inputType="text"
                        android:text = "ea55d401-e2cb-49ca-9db0-adeae9f74774"
                        android:layout_marginTop="11dp"
                        android:padding="8dp"
                        android:background = "@drawable/edittext_stili"
                        android:textSize="9sp" />




                    <Button
                        android:text="Подробно о заказе"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:textSize="8sp"
                        android:id="@+id/btn_pass_delivery_service"
                        android:layout_below = "@+id/container_name"
                        android:layout_alignParentRight = "true"
                        android:layout_marginTop = "9dp"
                        android:background="@drawable/button_stili"
                        android:padding = "5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_toEndOf="@+id/progressBar"
                        android:layout_toRightOf="@+id/progressBar"
                        />


                    <TextView
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:layout_below="@+id/text1"
                        android:layout_marginTop="0dp"
                        android:padding="10dp"
                        android:text="Статус:"
                        android:textSize="15sp"
                        />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/container_name"

                        android:layout_marginTop="18dp"
                        android:indeterminate="false"
                        android:max="8"
                        android:layout_toRightOf="@+id/status"
                        android:layout_toEndOf="@+id/status"
                        android:minWidth="130dp"
                        android:min="0"

                        android:maxHeight="4dp"
                        android:progress="1"
                        />

                    <TextView
                        android:id="@+id/status_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:layout_below="@+id/progressBar"
                        android:text="1. Заявка"
                        android:textSize="12sp"
                        android:textColor="@android:color/black"
                        />





                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cardView2"
                app:cardCornerRadius="5dp"
                app:cardElevation="4dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/cardView1"
                android:layout_gravity="center_horizontal">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="260dp"
                    android:orientation="horizontal"
                    android:id = "@+id/fioBox1"
                    >

                    <TextView
                        android:id="@+id/Text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:padding="10dp"
                        android:layout_centerHorizontal = "true"
                        android:text="Положение контейнера"
                        android:textSize="15sp" />

                    <fragment
                        android:id="@+id/fragmentMap"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_below="@+id/Text1"
              
                        class="com.google.android.gms.maps.MapFragment"
                        />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="500dp"
                android:id="@+id/cardView3"
                app:cardCornerRadius="5dp"
                app:cardElevation="4dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/cardView2"
                android:layout_gravity="center_horizontal">
                
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id = "@+id/fioBox2"

                    >


                    <TextView
                        android:id="@+id/TEXT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:padding="10dp"
                        android:gravity="left"


                        android:text="Стоимость:"
                        android:textSize="15sp" />

                    <EditText
                        android:inputType="number"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/s_cost"
                        android:layout_toRightOf = "@+id/TEXT"
                        android:layout_toEndOf="@+id/TEXT"
                        android:layout_marginTop="8dp"
                        android:padding="8dp"
                        android:background = "@drawable/edittext_stili"
                        android:layout_marginStart="3dp"
                        android:layout_marginLeft="3dp"
                        android:textSize="9sp"
                        android:gravity="center"
                        />

                    <Button
                        android:id="@+id/btn_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"

                        android:layout_marginTop="10dp"
                        android:background="@drawable/button_stili"
                        android:padding = "5dp"
                        android:layout_toEndOf="@+id/s_cost"
                        android:layout_toRightOf="@+id/s_cost"
                        android:text="Оплатить"
                        android:textSize="6sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text = "Статус оплаты:"
                        android:id = "@+id/TEXT1"
                        android:textSize="15sp"
                        android:padding="10dp"
                        android:gravity="left"
                        android:layout_below="@+id/TEXT" />

                    <EditText
                        android:inputType="text"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/s_payment"
                        android:layout_below="@+id/s_cost"
                        android:layout_toRightOf = "@+id/TEXT1"
                        android:layout_toEndOf="@+id/TEXT1"

                        android:textSize="9sp"
                        android:layout_marginTop="8dp"
                        android:padding="8dp"
                        android:background = "@drawable/edittext_stili"
                        android:gravity="center"
                        />

                    <Button
                        android:id="@+id/btn_lock_unlock_door"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:layout_below="@+id/s_cost"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/button_stili"
                        android:padding = "0dp"
                        android:layout_toEndOf="@+id/s_payment"
                        android:layout_toRightOf="@+id/s_payment"
                        android:text="Открыть замок"
                        android:textSize="8sp" />

            
                    

                   

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text = "Завершив погрузочные работы, передайте контейнер службе доставке"
                        android:layout_below = "@+id/btn_lock_unlock_door"
                        android:id = "@+id/TEXT6"
                        android:textSize="15sp"
                        android:padding="10dp"
                        android:gravity="left"
                        />

                     <ExpandableListView
                        android:id="@+id/boxListView"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/TEXT6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                    />


                </RelativeLayout>

               
            </android.support.v7.widget.CardView>

        </RelativeLayout>
    </ScrollView>
    <ProgressBar
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/preloader"
        />


</RelativeLayout>