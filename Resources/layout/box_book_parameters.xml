<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
	android:layout_margin="10dp"
    android:layout_height="match_parent">
	
		<android.support.v7.widget.CardView                                         
			android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="10dp"
		    android:id="@+id/cardViewBox"
            android:layout_marginTop="15dp"
			app:cardCornerRadius="2dp"
            app:contentPadding="10dp"
            android:layout_gravity="center_horizontal">
		
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:padding="10dp">
			
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"			
			android:orientation="horizontal">

			<ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
				android:id="@+id/img_box"
				android:layout_marginRight="10dp"
				android:src="@drawable/opened_box"/>

			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical">
	
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text = "Контейнер 12209088А"                   
						android:textSize="20sp"
						android:textStyle = "bold"
						android:textColor = "#2C4C46"
						android:id = "@+id/txtBoxName"        
                    />
		
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"				
						android:orientation="horizontal">

						<TextView
							android:id="@+id/txtOrder"				
							android:textSize="17sp"
							android:text="Заказ:"
							android:layout_marginRight="5dp"
							android:textStyle="normal"
							android:textColor = "#475B57"
							android:layout_height="wrap_content"
							android:layout_width="wrap_content"/>

						<TextView
							android:id="@+id/txt123"
							android:layout_marginLeft="5dp"
							android:text="нет заказа"
							android:textStyle="normal"
							android:textColor = "#475B57"
							android:layout_height="wrap_content"
							android:layout_width="wrap_content"
							android:textSize="17sp"/>

				
                    </LinearLayout>
					<TextView
							android:id="@+id/txt_alarm"
							android:layout_marginLeft="0dp"
							android:text=""
							android:textStyle="normal"
							android:textColor = "@android:color/holo_red_light"
							android:layout_height="wrap_content"
							android:layout_width="wrap_content"
							android:textSize="14sp"/>

					 <Button
                            android:textColor="@color/colorMainLightBlue"
                            android:background="@drawable/button_stili"
                            android:id="@+id/btn_info_box"
                            android:layout_width="wrap_content"
                            android:layout_height="33dp"
                            android:textSize = "10dp"
                            android:text = "Подробно"
                            />

			</LinearLayout>
		

		</LinearLayout>
				

			<View
                 android:stateListAnimator="@null"                  
				android:layout_width="fill_parent"
				android:layout_height="1dp"
				android:id="@+id/view2"
				android:layout_marginTop="8dp"
				android:background="#CCCCCC"/>

			<!--<ExpandableListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
				android:id="@+id/expandableListView2"
				android:layout_marginTop="10dp"/>-->
				
			</LinearLayout>

		</android.support.v7.widget.CardView>
	
</LinearLayout>