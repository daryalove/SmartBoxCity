<?xml version="1.0" encoding="utf-8" ?> 
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
	android:layout_height="fill_parent"
    android:background="@drawable/activity_stili">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="-50dp"
        android:padding="10dp"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:text="SmartBoxCity"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="37dp"
            android:layout_marginBottom="@dimen/abc_action_bar_content_inset_material"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_width="240dp"
            android:id="@+id/btn_cost"
            android:layout_marginTop="20dp"
            android:text="Предварительный расчет стоимости перевозки груза"
            android:textColor="@android:color/white"
            android:background="@drawable/button_stili"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_width="240dp"
            android:layout_marginTop="20dp"
            android:text="Войти"
            android:id="@+id/btn_auth2"
            android:textColor="@android:color/white"
            android:background="@drawable/button_stili"
            android:layout_height="wrap_content"/>
        
    </LinearLayout>
</RelativeLayout>