<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"  
    android:orientation="vertical"  
    android:layout_width="match_parent"  
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:text="Выбрать время"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_title_time" />

    <View
        android:background = "#ABA7A7"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop = "10dp"
    />
    <TextView
        android:text="Выберите время доставки пустого контейнера.\n\nВремя:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_marginTop = "10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_confirm_time" />

    <RadioGroup
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/RadioGroupTimeClient">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="8:00 - 10:00"
            android:id="@+id/rb_first" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00 - 12:00"
            android:id="@+id/rb_second" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:00 - 14:00"
            android:id="@+id/rb_third" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14:00 - 16:00"
            android:id="@+id/rb_vierth" />
         <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16:00 - 18:00"
            android:id="@+id/rb_fifth" />
         <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18:00 - 20:00"
            android:id="@+id/rb_sixth" />
    </RadioGroup> 
    

          
</LinearLayout>