<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    android:background = "@drawable/activity_stili"
    android:id="@+id/about_us_layout">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text = "Центральный офис в городе Новочеркасск"
                   android:textColor = "#2C4C46"
                   android:textStyle = "normal"
                   android:textSize = "16dp"
                   android:gravity = "center"
                   android:padding = "10dp"
                   android:id ="@+id/TextTopContact"
            />

             <View
                android:layout_width="match_parent"
                android:layout_marginTop = "3dp"
                android:layout_height="2dp"
                android:layout_marginLeft = "30dp"
                android:layout_marginRight = "30dp"
                android:background = "#A2A5A4"
                android:layout_below = "@+id/TextTopContact"
                android:id = "@+id/ViewListContacts"/>

            <ImageView
                android:layout_width="278dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal = "true"
                android:layout_below = "@+id/ViewListContacts"
                android:id="@+id/ImageViewContacts" />

             <TextView
                android:textColor = "#475B57"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below = "@+id/ImageViewContacts"
                android:id="@+id/TextContacts" />
            
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>