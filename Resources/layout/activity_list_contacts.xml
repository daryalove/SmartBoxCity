<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    android:background = "@drawable/activity_stili"
    android:id="@+id/about_us_layout">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text = "Центральный офис в городе Новочеркасск"
               android:gravity = "center"
               android:padding = "10dp"
                android:id ="@+id/EditTextTopContact"
            />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id = "@+id/linearlayout1"
                android:orientation = "vertical"
                android:layout_below = "@+id/EditTextTopContact">
                <TextView
                    android:text="@string/textContacts1"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background = "@drawable/edittext_stili"
                    android:minWidth="25px"
                    android:padding = "10dp"
                    android:layout_marginTop = "7dp"
                    android:minHeight="25px"
                    android:textSize = "14sp"
                    android:id="@+id/textViewcon1" />
                <ImageView
                    android:src="@drawable/map3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imagmap3" />
                
                <TextView
                    android:text="@string/textContacts2"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_width="match_parent"
                    android:textSize = "14sp"
                    android:minWidth="25px"
                    android:padding = "10dp"
                    android:layout_marginTop = "7dp"
                    android:background = "@drawable/edittext_stili"
                    android:minHeight="25px"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewcon2" />
                <TextView
                    android:text="@string/textContacts3"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_width="match_parent"
                    android:textSize = "14sp"
                    android:minWidth="25px"
                    android:padding = "10dp"
                    android:layout_marginTop = "7dp"
                    android:background = "@drawable/edittext_stili"
                    android:minHeight="25px"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewcon3" />

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>