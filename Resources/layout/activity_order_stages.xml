<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
	android:background = "@drawable/activity_stili">

      <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"> 
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight = "8dp">           
            
            <TextView
                android:text="Этапы заказа"
                android:textColor = "#2C4C46"
                android:layout_centerHorizontal = "true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TextViewStagesHaupt" /> 

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/CardViewMainOrderStatus"
                android:layout_below = "@+id/TextViewStagesHaupt"
                app:cardCornerRadius="5dp"
                android:layout_marginTop = "10dp"
                android:layout_gravity="center_horizontal">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_margin = "5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/LinearLayoutOrderItsStagesHaupt">
               
                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity = "center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:padding="12dp"              
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textStyle = "normal"
                            android:text="Заказ:"
                            android:textSize = "15dp"/>
                            
                        <TextView
                            android:id="@+id/OrderStageTxtId"
                            android:textStyle = "normal"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="12dp"
                            android:textColor = "@color/colorMainBlue"
                            android:textSize="17sp"/>    
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft = "20dp"
                        android:layout_marginRight = "20dp"
                        android:background = "@color/colorMainLightBlue"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        
                        <LinearLayout
                            android:orientation="vertical"
                            android:gravity = "center"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">              
                            <TextView
                                android:textSize = "14dp"
                                android:padding="12dp"
                                android:gravity="right"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle = "normal"
                                android:textColor="@color/textclient"
                                android:text="Статус"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft = "20dp"
                                android:background="@color/colorMainLightBlue"/>
                            <TextView
                                android:textSize = "11dp"
                                android:textColor = "#19C109"
                                android:layout_margin="3dp"                           
                                android:gravity="center"
                                android:layout_weight="2"
                                android:padding="12dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/OrderStageTxtPaymentStatus" />
                      
                        </LinearLayout>  
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorMainLightBlue"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:gravity = "center"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                
                            <TextView
                                android:textSize = "14dp"
                                android:padding="12dp"                                
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:textColor="@color/textclient"
                                android:text="Стоимость"/>
                             <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginRight = "20dp"
                                android:background="@color/colorMainLightBlue"/>
                            <TextView
                                android:textSize = "11dp"
                                android:textColor ="#FFFFFF"
                                android:layout_margin="5dp"
                                android:background="@drawable/button_stili"
                                android:layout_gravity="center"
                                android:layout_weight="2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/OrderStageTxtCost" />                                                               
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft = "20dp"
                        android:layout_marginRight = "20dp"
                        android:background = "@color/colorMainLightBlue"/>

                    <TextView
                        android:text="Этапы выполнения заказа"
                        android:textStyle = "normal"
                        android:textSize = "17sp"
                        android:layout_marginTop = "10dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:gravity = "center"                       
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/> 
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_margin="10dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:orientation="horizontal"                       
                            android:layout_marginTop = "10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:background = "@drawable/stagestylefuture"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/StageRequest" />
                            <TextView
                                android:text= "- Заявка"
                                android:textSize="13dp"
                                android:textColor="#9FF38C"
                                android:textStyle = "normal"
                                android:layout_marginLeft = "10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/StageRequestValue" />
                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_marginTop="2dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10dp"
                            android:background="#A0A6A0"/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_marginTop = "2dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:background = "@drawable/stagestylefuture"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/StageWaitTransport" />
                            <TextView
                                android:text="- Ожидание перевозки"
                                android:textSize="13dp"
                                android:textColor="@color/NameStageFuture"
                                android:textStyle = "normal"
                                android:layout_marginLeft = "10dp"                                
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/StageWaitTransportValue" />
                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_marginTop="2dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10dp"
                            android:background="#A0A6A0"/>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_marginTop = "2dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:background = "@drawable/stagestylefuture"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/StageLading" />
                            <TextView
                                android:text=" - Погрузка"
                                android:textSize="13dp"
                                android:textStyle = "normal"
                                android:textColor="@color/NameStageFuture"
                                android:layout_marginLeft = "10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/StageLadingValue" />
                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_marginTop="2dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10dp"
                            android:background="#A0A6A0"/>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_marginTop = "2dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:background = "@drawable/stagestylefuture"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/StageShipping" />
                            <TextView
                                android:text=" - Перевозка"
                                android:textSize="13dp"
                                android:textStyle = "normal"
                                android:textColor="@color/NameStageFuture"
                                android:layout_marginLeft = "10dp"                               
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/StageShippingValue" />
                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_marginTop="2dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10dp"
                            android:background="#A0A6A0"/>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_marginTop = "2dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:background = "@drawable/stagestylefuture"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/StageWaitUnload" />
                            <TextView
                                android:text=" - Ожидание выгрузки"
                                android:textSize="13dp"
                                android:textStyle = "normal"
                                android:textColor="@color/NameStageFuture"
                                android:layout_marginLeft = "10dp"                               
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/StageWaitUnloadValue" />
                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_marginTop="2dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10dp"
                            android:background="#A0A6A0"/>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_marginTop = "2dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:background = "@drawable/stagestylefuture"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/StageUnload" />
                            <TextView
                                android:text=" - Выгрузка"
                                android:textSize="13dp"
                                android:textColor="@color/NameStageFuture"
                                android:textStyle = "normal"
                                android:layout_marginLeft = "10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/StageUnloadValue" />
                        </LinearLayout>

                       <View
                            android:layout_width="1dp"
                            android:layout_marginTop="2dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10dp"
                            android:background="#A0A6A0"/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_marginTop = "2dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:background = "@drawable/stagestylefuture"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/StageCompletion" />
                            <TextView
                                android:text=" - Завершение"
                                android:textSize="13dp"
                                android:textStyle = "normal"
                                android:textColor="@color/NameStageFuture"
                                android:layout_marginLeft = "10dp"                                
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/StageCompletionValue" />
                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_marginTop="2dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10dp"
                            android:background="#A0A6A0"/>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_marginTop = "2dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:background = "@drawable/stagestylefuture"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/StageEndCompletion" />
                            <TextView
                                android:text=" - Выполнен"
                                android:textSize="13dp"
                                android:textStyle = "normal"
                                android:textColor="@color/NameStageFuture"
                                android:layout_marginLeft = "10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/StageEndCompletionValue" />
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_marginTop = "10dp"
                        android:layout_marginBottom = "5dp"
                        android:layout_height="1dp"
                        android:layout_marginLeft = "80dp"
                        android:layout_marginRight = "80dp"
                        android:background = "@color/colorMainLightBlue"/>             
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
      </ScrollView>
</RelativeLayout>