<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"  
    android:orientation="vertical"  
    android:layout_width="match_parent"  
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:text="Выполнение задачи"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4" />

    <View
        android:background = "#ABA7A7"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop = "10dp"
    />
    <TextView
        android:text="Вы действительно хотите отметить задачу как выполненную?"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_marginTop = "10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5" />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/txt_choice_box"
        android:text="\n\nУкажите контейнер:"
        android:layout_height="wrap_content"/>

    <RadioGroup
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/RadioGroupBoxDriver">


      
    </RadioGroup> 
    
    
          
</LinearLayout>