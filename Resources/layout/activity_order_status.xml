<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:id="@+id/order_status_layout"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ui.login.LoginActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight = "8dp"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linearPaymentStatus">

            <TextView
                android:id="@+id/textOrderNumber"
                android:layout_width="wrap_content"
                android:textColor = "#2C4C46"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:padding="10dp"
                android:text="Заказ:"
                android:textSize="15sp"
                />

            <EditText

                android:id="@+id/EditOrderNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/textOrderNumber"
                android:layout_toRightOf="@+id/textOrderNumber"
                android:padding="12dp"
                android:textColor = "#475B57"
                android:text = "ea55d401-e2cb-49ca-9db0-adeae9f74774"
                android:background = "@drawable/edittext_stili"
                android:textSize="9sp" />
                
            <ProgressBar
                android:id="@+id/progressBarOrder"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal = "true"
                android:layout_marginTop = "20dp"
                android:indeterminate="false"
                android:max="8"
                android:layout_below="@+id/EditOrderNumber"
                android:minWidth="130dp"
                android:min="0"
                android:maxHeight="4dp"
                android:progress="1"
                />

            <TextView
                android:id="@+id/textProgressOrderStage"
                android:textSize = "10sp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below = "@+id/progressBarOrder"
                android:layout_centerHorizontal = "true"
                android:text="1. Заявка"
                android:textColor = "#475B57"
                />

            <EditText
                android:text="900 р."
                android:padding="8dp"
                android:background = "@drawable/edittext_stili"
                android:layout_marginLeft="13dp"
                android:textSize = "15sp"
                android:textColor = "#475B57"
                android:layout_centerHorizontal = "true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/EditOrderNumber"
                android:layout_toRightOf="@id/EditOrderNumber"
                android:id="@+id/texPaymentStatus" />

                <TextView
                    android:id="@+id/textSmallStatus"
                    android:textSize = "12sp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below = "@+id/texPaymentStatus"
                    android:layout_alignLeft="@+id/texPaymentStatus"
                    android:layout_alignStart="@+id/texPaymentStatus"
                    android:textAlignment="center"
                    android:text="Оплачено"
                    android:textColor="@android:color/holo_green_dark"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id = "@+id/relativGPSOrder"
                android:layout_below = "@+id/linearPaymentStatus"
                android:background = "@drawable/edittext_stili"
                android:layout_marginTop = "10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id = "@+id/linearTextStateOrder"
                    android:orientation = "horizontal">

                    <TextView
                        android:id="@+id/textFrom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:padding="10dp"
                        android:textColor = "#2C4C46"
                        android:text="Откуда:"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:id="@+id/EditFrom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:padding="10dp"
                        android:textColor = "#475B57"
                        android:text="Подпольный переулок, 1Б, Ростов-на-Дону, Ростовская область"
                        android:textSize="15sp"
                        android:layout_alignParentRight = "true"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id = "@+id/linearValuesStateOrder"
                    android:layout_below = "@+id/linearTextStateOrder"
                    android:orientation = "horizontal">

                    <TextView
                        android:id="@+id/textTo"
                        android:textColor = "#2C4C46"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:padding="10dp"
                        android:text="Куда:"
                        android:textSize="15sp"
                        />

                    <TextView
                        android:id="@+id/EditTo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:padding="10dp"
                        android:textColor = "#475B57"
                        android:text="Крепостной переулок, 87, Ростов-на-Дону, Ростовская область"
                        android:textSize="15sp"
                        android:layout_alignParentRight = "true"
                        android:layout_marginLeft = "20dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id = "@+id/linearValuesStateOrder1"
                    android:layout_below = "@+id/linearValuesStateOrder"
                    android:orientation = "horizontal">

                    <TextView
                        android:id="@+id/textWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:padding="10dp"
                        android:textColor = "#2C4C46"
                        android:layout_alignParentRight = "true"
                        android:text="Вес, кг:"
                        android:textSize="15sp"
                        />

                    <TextView
                        android:id="@+id/EditTo1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:padding="10dp"
                        android:textColor = "#475B57"
                        android:text="10"
                        android:textSize="15sp"
                        android:layout_alignParentRight = "true"
                        android:layout_marginLeft = "20dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id = "@+id/linearValuesStateOrder2"
                    android:layout_below = "@+id/linearValuesStateOrder1"
                    android:orientation = "horizontal">

                    <TextView
                        android:id="@+id/textWeight3"
                        android:textColor = "#2C4C46"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:padding="10dp"
                        android:layout_alignParentRight = "true"
                        android:text="ДхШхВ:"
                        android:textSize="15sp"
                        />

                    <TextView
                        android:id="@+id/EditTo12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:padding="10dp"
                        android:textColor = "#475B57"
                        android:text="0.80х1.20х1.00"
                        android:textSize="15sp"
                        android:layout_alignParentRight = "true"
                        android:layout_marginLeft = "20dp"
                        />

                </LinearLayout>
            </RelativeLayout>
            <fragment
                android:id="@+id/fragmentMap"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop = "10dp"
                android:layout_below="@+id/relativGPSOrder"
                android:layout_above="@+id/fragmentMainMenu"
                class="com.google.android.gms.maps.MapFragment"
                />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>