<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background = "@drawable/activity_stili"
    android:id="@+id/not_found_alarms_layout">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text = "Тревоги"
               android:textColor = "#2C4C46"
               android:textSize = "16dp"
               android:gravity = "center"
               android:padding = "10dp"
               android:id ="@+id/TextAlarmsTop"
            />
            <View
                android:layout_width="match_parent"
                android:layout_marginTop = "3dp"
                android:layout_height="2dp"
                android:layout_marginLeft = "30dp"
                android:layout_marginRight = "30dp"
                android:background = "#A2A5A4"
                android:layout_below = "@+id/TextAlarmsTop"
                android:id = "@+id/ViewAlarms"/>
            <TextView
                android:text="Пока нет тревог на контейнерах!"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal = "true"
                android:layout_marginTop = "250dp"
                android:textColor = "#475B57"
                android:id="@+id/textDesc" />

</RelativeLayout>
</ScrollView>
</RelativeLayout>