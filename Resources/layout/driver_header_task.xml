<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/firstTask">

            <android.support.v7.widget.CardView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/cardViewTask"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="4dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal">
        
                        <RelativeLayout
                            android:id="@+id/fioBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/abc_action_bar_content_inset_material">
                    
                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"                   
                                android:id="@+id/img_current_task"
                                android:src="@drawable/map"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="17sp"
                                android:layout_marginLeft="4dp"
                                android:textStyle="bold"
                                android:layout_toRightOf="@+id/img_current_task"
                                android:layout_marginBottom="10dp"
                                android:text = "Заказ "
                                android:id="@+id/txtHeader1"
                            />
                            <TextView
                                android:text="S012G3421201"                        
                                android:layout_width="wrap_content"
                                android:layout_weight=".55"
                                android:layout_height="45dp"                       
                                android:layout_marginLeft="5dp"
                                android:paddingBottom="@dimen/abc_action_bar_content_inset_material"
                                android:textSize="17sp"
                                android:layout_marginBottom="0.0dp"
                                android:id="@+id/btn_about_order"                        
                                android:textColor = "#2C4C46"
                                android:layout_toRightOf="@+id/txtHeader1"
                            />                    

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtTaskName"
                                android:layout_marginTop="10dp"
                                android:textColor = "#475B57"
                                android:layout_below="@id/img_current_task"
                                android:text="Задача на перевозку пустого контейнера к клиенту от 08.02.2020 15:45:44"/>

                
                            
                            <Button
                                android:id="@+id/btn_prime"
                                android:layout_width="145dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_below = "@+id/txtTaskName"
                                android:background="@drawable/button_stili"
                                android:padding = "1dp"
                                android:textColor = "#FBF8F8"
                                android:layout_marginTop="10dp"
                                android:text="Прервать"
                                android:textSize="12sp"/>
                                
                            <Button
                                android:id="@+id/btn_prime2"
                                android:layout_width="145dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:textColor = "#FBF8F8"
                                android:layout_below = "@+id/txtTaskName"
                                android:background="@drawable/button_primary"
                                android:padding = "1dp"
                                android:layout_marginTop="10dp"
                                android:text="Выполнил"
                                android:textSize="12sp"/>
                                
                        </RelativeLayout>

            </android.support.v7.widget.CardView>

            
       </RelativeLayout>