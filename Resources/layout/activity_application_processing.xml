<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
    android:id="@+id/order_layout"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
	android:background = "@color/button_material_light"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ui.login.LoginActivity">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"> 
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight = "8dp"
            >
            

            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cardView5"
                app:cardElevation="4dp"
                
                android:layout_gravity="center_horizontal">

            <RelativeLayout
                android:id="@+id/fioBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/abc_action_bar_content_inset_material"
                android:paddingRight="@dimen/abc_action_bar_content_inset_material"
                android:orientation="horizontal"
                >
               
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "Заявка на перевозку груза"
                    android:padding="10dp"
                    android:textSize="15sp"
                    android:textColor="#FFA07A"
                    android:id = "@+id/textHeading"
                    android:layout_centerHorizontal = "true"
                />
               
               
                    <android.support.design.widget.TextInputLayout
			            android:layout_width="match_parent"
                        android:layout_height="wrap_content"
			            style="@style/LoginTextInputLayoutStyle"
			            android:id="@+id/s_edit_from_layout"
                        android:layout_below="@+id/textHeading">

                        <EditText
                            android:id="@+id/s_edit_from"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                   
                            android:inputType="text"
                            android:hint="Откуда"
                            android:layout_marginTop="8dp"
                            android:padding="8dp"
                    
                            android:textSize="11sp"
                    
                            />
                        </android.support.design.widget.TextInputLayout>
                
                    <android.support.design.widget.TextInputLayout
			            android:layout_width="match_parent"
                        android:layout_height="wrap_content"
			            style="@style/LoginTextInputLayoutStyle"
			            android:id="@+id/s_edit_where_layout"
                        android:layout_below = "@+id/s_edit_from_layout">

                        <EditText
                            android:id="@+id/s_edit_where"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:hint="Куда"
                            android:layout_marginTop="13dp"
                            android:padding="8dp"
                            android:textSize="11sp"
                        />
                    </android.support.design.widget.TextInputLayout>
                
               
                    <android.support.design.widget.TextInputLayout
			            android:layout_width="match_parent"
                        android:layout_height="wrap_content"
			            style="@style/LoginTextInputLayoutStyle"
			            android:id="@+id/s_shipment_time_layout"
                        android:layout_below = "@+id/s_edit_where_layout">

                        <EditText
                            android:id="@+id/s_shipment_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:hint="Время разгрузки"
                            android:layout_marginTop="13dp"
                            android:padding="8dp"
                            android:textSize="11sp"
                        />
                    </android.support.design.widget.TextInputLayout>


              
                    <android.support.design.widget.TextInputLayout
			            android:layout_width="match_parent"
                        android:layout_height="wrap_content"
			            style="@style/LoginTextInputLayoutStyle"
			            android:id="@+id/s_shipping_date_layout"
                        android:layout_below = "@+id/s_shipment_time_layout">

                        <EditText
                            android:id="@+id/s_shipping_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:hint="Дата разгрузки"
                            android:layout_marginTop="13dp"
                            android:padding="8dp"
                            android:textSize="11sp"
                        />
                    </android.support.design.widget.TextInputLayout>
                
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_below="@+id/s_shipping_date_layout"
                        android:text=""
                        android:background="@android:color/white"
                    />
              </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cardView6"
                app:cardElevation="4dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/cardView5"
                android:layout_gravity="center_horizontal">
            
                    <RelativeLayout
                android:id="@+id/fioBox1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"               
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="16dp"  
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "Параметры груза"             
                    android:padding="10dp"
                    android:textSize="15sp"
                        android:textColor="#FFA07A"
                    android:id = "@+id/textHeading1"
                    android:layout_centerHorizontal = "true"
                />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id = "@+id/s_length_linear_layout"
                        android:orientation = "horizontal"
                        android:layout_marginLeft = "30dp"
                        android:layout_below = "@+id/textHeading1">

                        <android.support.design.widget.TextInputLayout
			            android:layout_width="100dp"
                        android:layout_height="wrap_content"
			            style="@style/LoginTextInputLayoutStyle"
			            android:id="@+id/s_length_layout">
                        

                        <EditText
                            android:id="@+id/s_length"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:hint="Длина"
                            android:padding="8dp"
                            android:textSize="11sp"
                        />
                    </android.support.design.widget.TextInputLayout>
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "м"
                    android:textSize="13sp"
                    android:padding="8dp"          
                    android:inputType="text"                    
                    android:id = "@+id/mLenght"
                />
                </LinearLayout>
                   
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id = "@+id/s_width_linear_layout"
                        android:layout_marginStart = "20dp"
                        android:layout_marginRight = "20dp"
                        android:layout_toRightOf = "@+id/s_length_linear_layout"
                        android:orientation = "horizontal"
                        android:layout_below = "@+id/textHeading1">
                    <android.support.design.widget.TextInputLayout
			            android:layout_width="100dp"
                        android:layout_height="wrap_content"
			            style="@style/LoginTextInputLayoutStyle"
			            android:id="@+id/s_width_layout">

                        <EditText
                            android:id="@+id/s_width"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:hint="Ширина"
                            android:padding="8dp"
                            android:textSize="11sp"
                        />
                    </android.support.design.widget.TextInputLayout>
                 
                
                <TextView
                   android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "м"
                    android:textSize="13sp"
                    android:padding="8dp"                   
                    android:inputType="text"
                    android:layout_below = "@+id/textHeading1"
                    android:id = "@+id/mWidth"
                />
                </LinearLayout>
                   
                 <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id = "@+id/s_height_linear_layout"
                        android:orientation = "horizontal"
                        android:layout_marginLeft = "30dp"
                        android:layout_below = "@+id/s_length_linear_layout"              
                        >
                    <android.support.design.widget.TextInputLayout
			            android:layout_width="100dp"
                        android:layout_height="wrap_content"
			            style="@style/LoginTextInputLayoutStyle"
			            android:id="@+id/s_height_layout">

                        <EditText
                            android:id="@+id/s_height"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:hint="Высота"
                            android:padding="8dp"
                            android:textSize="11sp"
                        />
                    </android.support.design.widget.TextInputLayout>

                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "м"
                    android:textSize="13sp"
                    android:padding="8dp"
                    android:inputType="text"                  
                    android:layout_below = "@+id/mLenght"
                    android:id = "@+id/mHeight"
                />
                </LinearLayout>
                   
                     <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id = "@+id/s_size_linear_layout"
                        android:orientation = "horizontal"
                        android:layout_marginStart = "20dp"
                        android:layout_marginRight = "20dp"
                        android:layout_toRightOf = "@+id/s_height_linear_layout"
                        android:layout_below = "@+id/s_length_linear_layout"                        
                        >
                   
                    <android.support.design.widget.TextInputLayout
			            android:layout_width="100dp"
                        android:layout_height="wrap_content"
			            style="@style/LoginTextInputLayoutStyle"
			            android:id="@+id/s_size_layout"
                        android:layout_toEndOf="@+id/mLenght"
                        android:layout_below = "@+id/s_width_layout">

                        <EditText
                            android:id="@+id/s_size"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:hint="Объём"
                            android:padding="8dp"
                            android:textSize="11sp"
                        />
                    </android.support.design.widget.TextInputLayout>
                
                 <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "м³"                    
                    android:textSize="13sp"
                    android:padding="8dp"
                    android:inputType="text"
                    android:id = "@+id/mSize"
                />
                </LinearLayout>
                   
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id = "@+id/s_weight_linear_layout"
                        android:orientation = "horizontal"
                        android:layout_below = "@+id/s_height_linear_layout"                        
                        >
                   
                    <android.support.design.widget.TextInputLayout
			            android:layout_width="100dp"
                        android:layout_height="wrap_content"
			            style="@style/LoginTextInputLayoutStyle"
			            android:id="@+id/s_weight_layout"
                        android:layout_marginLeft="30dp"
                        android:layout_below = "@+id/s_height_layout">

                        <EditText
                            android:id="@+id/s_weight"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:hint="Вес груза"
                            android:padding="8dp"
                            android:textSize="11sp"
                        />
                    </android.support.design.widget.TextInputLayout>
                
                   <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text = "кг"
                        android:textSize="13sp"
                        android:padding="8dp"
                        android:inputType="text"
                        android:id = "@+id/mWeight"
                    />

                </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id = "@+id/s_sum_seats_linear_layout"
                        android:orientation = "horizontal"
                        android:layout_marginStart = "17dp"
                        android:layout_marginRight = "17dp"
                        android:layout_toRightOf = "@+id/s_weight_linear_layout"
                        android:layout_below = "@+id/s_height_linear_layout"                        
                        >
                   
                     <android.support.design.widget.TextInputLayout
			            android:layout_width="100dp"
                        android:layout_height="wrap_content"
			            style="@style/LoginTextInputLayoutStyle"
			            android:id="@+id/s_sum_seats_layout">

                        <EditText
                            android:id="@+id/s_sum_seats"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:hint="Кол-во мест"
                            android:padding="8dp"
                            android:textSize="11sp"
                        />
                    </android.support.design.widget.TextInputLayout>                            
                </LinearLayout>
               
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "Характер груза:"
                    android:id = "@+id/TextCargoCharacteristic"
                    android:gravity="left|center_vertical"
                    android:padding="10dp"                    
                    android:textSize="15sp"
                    android:layout_below = "@+id/s_weight_linear_layout"
                />
              
                <Spinner
                   android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="9sp"
                    android:padding="4dp"
                       
                    android:id = "@+id/s_cargo_characteristic"
                    android:entries="@array/array_cargo_characteristic"
                    android:layout_marginLeft = "5dp"
                    android:layout_marginRight = "5dp"
                    android:layout_marginStart = "5dp"
                    android:layout_below = "@+id/TextCargoCharacteristic"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "Класс опасности:"
                    android:id = "@+id/TextHazardClass"
                    android:gravity="left|center_vertical"
                    android:padding="10dp"
                        
                    android:textSize="15sp"
                    android:layout_below = "@+id/s_cargo_characteristic"
                />

                <Spinner
                   android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="9sp"
                    android:padding="4dp"
                    android:id = "@+id/s_hazard_class"
                    android:entries="@array/array_hazard_class"
                    android:layout_marginLeft = "5dp"
                    android:layout_marginRight = "5dp"
                    android:layout_marginStart = "5dp"
                    android:layout_below = "@+id/TextHazardClass"
                    android:background = "@drawable/edittext_stili"/>

                 <TextView
                     android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "Страхование груза:"
                    android:id = "@+id/TextCargoInsurance"
                    android:gravity="left|center_vertical"
                    android:padding="8dp"
                        
                    android:textSize="12sp"
                    android:layout_below = "@+id/s_hazard_class"
                    
                />     
                            
               <CheckBox 
                      android:id="@+id/chek_cargo_insurance"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentRight = "true"
                      android:layout_below = "@+id/s_hazard_class"
                      android:padding="8dp"
                />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_below="@+id/TextCargoInsurance"
                        android:text=""
                        android:background="@android:color/white"
                    />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            
                <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cardView7"
                app:cardElevation="4dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/cardView6"
                android:layout_gravity="center_horizontal">
                <RelativeLayout
                    android:id="@+id/fioBox2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/abc_action_bar_content_inset_material"
                android:paddingRight="@dimen/abc_action_bar_content_inset_material"
                >
               
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "Дополнительные сведения"             
                    android:padding="10dp"
                    android:textSize="15sp"
                        android:textColor="#FFA07A"
                    android:id = "@+id/textHeading2"
                    android:layout_centerHorizontal = "true"
                />

                 <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "Назначить получателя"
                    android:id = "@+id/TextContactPerson"
                    android:gravity="left|center_vertical"
                    android:padding="10dp"
                    android:layout_below="@+id/textHeading2"
                   
                    android:textSize="15sp"
                   
                />

                <CheckBox 
                      android:layout_below="@+id/textHeading2"
                      android:id="@+id/chek_receiver"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentRight = "true"
                      
                      android:padding="8dp"
                /> 
                    <android.support.design.widget.TextInputLayout
			            android:layout_width="match_parent"
                        android:layout_height="wrap_content"
			            style="@style/LoginTextInputLayoutStyle"
			            android:id="@+id/s_contact_person_layout"
                        
                        
                        android:layout_below = "@+id/TextContactPerson">

                        <EditText
                            android:id="@+id/s_contact_person"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:hint="Введите e-mail получателя"
                            android:layout_marginTop="13dp"
                            android:padding="8dp"
                            android:textSize="11sp"
                        />
                    </android.support.design.widget.TextInputLayout>                              

                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "Способ погрузки:"
                    android:id = "@+id/TextLoadingMethods"
                    android:gravity="left|center_vertical"
                    android:padding="10dp"                   
                    android:textSize="15sp"
                    android:layout_below = "@+id/s_contact_person_layout"
                />
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="9sp"
                    android:padding="4dp"
                    android:id = "@+id/s_loading_methods"
                    android:entries="@array/array_loading_methodsc"
                    android:layout_marginLeft = "5dp"
                    android:layout_marginRight = "5dp"
                    android:layout_marginStart = "5dp"
                    android:layout_below = "@+id/TextLoadingMethods"
                    android:background = "@drawable/edittext_stili"/>
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation = "horizontal"
                        android:layout_marginTop = "10dp"
                        android:layout_below = "@+id/s_loading_methods"
                        android:id = "@+id/check_argue_layout">
                <CheckBox
                        android:id="@+id/check_argue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"                  
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "Согласие с договором офертой"
                    android:id = "@+id/isArgued"
                    android:layout_marginStart = "-20dp"
                    android:layout_marginRight = "-20dp"
                    android:padding="10dp"   
                    android:textSize="10sp"
                />
               
                </LinearLayout>
                 </RelativeLayout>
                </android.support.v7.widget.CardView>

                 <Button
                    android:id="@+id/btn_make_request"
                    android:layout_width="200dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="8dp"
                    android:background="#FFA07A"
                    android:layout_below = "@+id/cardView7"
                    
                   android:layout_centerInParent="true"
                    android:padding = "5dp"
                    android:text="Оформить заявку"                  
                    android:textSize="8sp"
                  />

                
                
                
        </RelativeLayout>
    </ScrollView>
    <ProgressBar
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/preloader"
        />
</RelativeLayout>

