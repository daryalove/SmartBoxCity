<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background = "@drawable/activity_stili"
    tools:context=".ui.login.LoginActivity">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"> 
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight = "8dp">           
            
            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cardViewgGeneralDataIndividual"
                app:cardCornerRadius="5dp"
                app:cardElevation="4dp"
                android:layout_gravity="center_horizontal">                
               

            <RelativeLayout
                android:id="@+id/fioBoxIndividual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="16dp"  
                >
               
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "Регистрация"
                    android:padding="10dp"
                    android:textColor = "#2C4C46"
                    android:textSize="17sp"
                    android:textStyle = "normal"
                    android:id = "@+id/textHeading"
                    android:layout_centerHorizontal = "true"
                />
            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/LoginTextInputLayoutStyle"
                    android:layout_below = "@+id/textHeading"
                    android:id="@+id/s_email_individual_layout">
                     <EditText
                        android:id="@+id/s_email_individual"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:inputType="textEmailAddress"
                        android:singleLine="true"
                        android:padding="8dp"
                        android:textSize = "14sp"
                        android:textColor="#716E6D"
                        android:layout_marginBottom="10dp"
                        android:hint = "Email"
                        />
                </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/LoginTextInputLayoutStyle"
                android:layout_below = "@+id/s_email_individual_layout"
                android:id="@+id/s_phone_individual_layout">
                 <EditText
                    android:id="@+id/s_phone_individual"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="number"
                    android:singleLine="true"
                    android:maxLength="11"
                    android:textSize = "14sp"
                    android:padding="8dp"
                    android:textColor="#716E6D"
                    android:layout_marginBottom="10dp"
                    android:hint = "Телефон"
                    />
                 </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/LoginTextInputLayoutStyle"
                android:layout_below = "@+id/s_phone_individual_layout"
                android:id="@+id/s_login_individual_layout">
                    <EditText
                    android:id="@+id/s_login_individual"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:padding="8dp"
                    android:textSize = "14sp"
                    android:textColor="#716E6D"
                    android:layout_marginBottom="10dp"
                    android:hint = "Логин"
                    />
                  </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/LoginTextInputLayoutStyle"
                android:layout_below = "@+id/s_login_individual_layout"
                android:id="@+id/s_pass_individual_layout">
                 <EditText
                    android:id="@+id/s_pass_individual"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:padding="8dp"
                    android:textSize = "14sp"
                    android:textColor="#716E6D"
                    android:layout_marginBottom="10dp"
                    android:hint = "Пароль"
                    />
                 </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/LoginTextInputLayoutStyle"
                android:layout_below = "@+id/s_pass_individual_layout"
                android:id="@+id/s_pass_confirmation_individual_layout">
                 <EditText
                    android:id="@+id/s_pass_confirmation_individual"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textSize = "14sp"
                    android:padding="8dp"
                    android:textColor="#716E6D"
                    android:layout_marginBottom="10dp"
                    android:hint = "Подтвердите пароль"/>
            </android.support.design.widget.TextInputLayout>

              </RelativeLayout>
                </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop = "10dp"
                android:layout_below = "@+id/cardViewgGeneralDataIndividual"
                android:id="@+id/cardViewSpecialDataIndividual"
                app:cardCornerRadius="5dp"
                app:cardElevation="4dp"
                android:layout_gravity="center_horizontal">
            <RelativeLayout
                android:id="@+id/fioBoxIndividual1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="16dp"   
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "Персональные данные клиента"
                    android:padding="10dp"
                    android:textSize="17sp"
                    android:textStyle ="normal"
                    android:textColor = "#2C4C46"
                    android:id = "@+id/textHeading"
                    android:layout_centerHorizontal = "true"
                />
               
        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/LoginTextInputLayoutStyle"
                android:layout_below = "@+id/textHeading"
                android:id="@+id/s_surname_individual_layout">
                 <EditText
                    android:id="@+id/s_surname_individual"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="textPersonName"
                    android:singleLine="true"
                    android:padding="8dp"
                    android:textSize = "14sp"
                    android:layout_marginBottom="10dp"
                    android:hint = "Фамилия"/>
            </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/LoginTextInputLayoutStyle"
                android:layout_below = "@+id/s_surname_individual_layout"
                android:id="@+id/s_name_individual_layout">
                 <EditText
                    android:id="@+id/s_name_individual"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="textPersonName"
                    android:singleLine="true"
                    android:padding="8dp"
                    android:textSize = "14sp"
                    android:layout_marginBottom="10dp"
                    android:hint = "Имя"/>
            </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/LoginTextInputLayoutStyle"
                android:layout_below = "@+id/s_name_individual_layout"
                android:id="@+id/s_patronymic_individual_layout">
                 <EditText
                    android:id="@+id/s_patronymic_individual"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="textPersonName"
                    android:singleLine="true"
                    android:padding="8dp"
                    android:textSize = "14sp"
                    android:layout_marginBottom="10dp"
                    android:hint = "Отчество"/>
            </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/LoginTextInputLayoutStyle"
                android:layout_below = "@+id/s_patronymic_individual_layout"
                android:id="@+id/s_passport_series_individual_layout">
                 <EditText
                    android:id="@+id/s_passport_series_individual"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="number"
                    android:singleLine="true"
                    android:maxLines="4"
                    android:maxLength="4"
                    android:padding="8dp"
                    android:textSize = "14sp"
                    android:layout_marginBottom="10dp"
                    android:hint = "Серия паспорта"/>
            </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/LoginTextInputLayoutStyle"
                android:layout_below = "@+id/s_passport_series_individual_layout"
                android:id="@+id/s_passport_number_individual_layout">
                 <EditText
                    android:id="@+id/s_passport_number_individual"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="number"
                    android:maxLines="6"
                    android:maxLength="6"
                    android:singleLine="true"
                    android:padding="8dp"
                    android:textSize = "14sp"
                    android:layout_marginBottom="10dp"
                    android:hint = "Номер паспорта"/>
            </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/LoginTextInputLayoutStyle"
                android:layout_below = "@+id/s_passport_number_individual_layout"
                android:id="@+id/s_date_birth_individual_layout">
                 <EditText
                    android:id="@+id/s_date_birth_individual"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="date"
                    android:singleLine="true"
                    android:padding="8dp"
                    android:textSize = "14sp"
                    android:layout_marginBottom="10dp"
                    android:hint = "Дата рождения"/>
            </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/LoginTextInputLayoutStyle"
                android:layout_below = "@+id/s_date_birth_individual_layout"
                android:id="@+id/s_department_code_individual_layout">
                 <EditText
                    android:id="@+id/s_department_code_individual"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="number"
                    android:singleLine="true"
                    android:maxLines="6"
                    android:maxLength="6"
                    android:padding="8dp"
                    android:textSize = "14sp"
                    android:layout_marginBottom="10dp"
                    android:hint = "Код подразделения"/>
            </android.support.design.widget.TextInputLayout>
            <CheckBox
                android:text="Согласие на обработку персональных данных"
                android:textColor = "#6D6969"
                android:textSize = "10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/check_personal_data_processing_individual"
                android:layout_below = "@+id/s_department_code_individual_layout"/>
            <CheckBox
                android:text="Согласие с договором офертой"
                android:textColor = "#475B57"
                android:textSize = "10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/check_contract_oferta_individual"
                android:layout_below = "@+id/check_personal_data_processing_individual"/>

              </RelativeLayout>
            </android.support.v7.widget.CardView>
            <Button
                android:id="@+id/btn_make_request"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_stili"
                android:textColor = "#FBF8F8"
                android:layout_below = "@+id/cardViewSpecialDataIndividual"
                android:layout_centerHorizontal ="true"
                android:text="Зарегистрироваться"
                android:textSize="10sp"
             />

        </RelativeLayout>
    </ScrollView>
    <ProgressBar
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/preloader"
        />
 </RelativeLayout>