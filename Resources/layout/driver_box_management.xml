<LinearLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    android:background = "@drawable/activity_stili">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="10dp"
        android:text="Текущая задача выполняемого заказа"
        android:textSize="20dp"
        android:textColor="@color/textclient"/>
     <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        android:background="#BFE2ED"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation = "vertical">           
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin = "10dp">          

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation = "horizontal"
                    android:id = "@+id/TaskManagementLinearId1"
                    android:layout_marginBottom = "8dp"
                    android:baselineAligned="true">
                    <TextView
                        android:text="Заказ :"
                        android:layout_weight="1"
                        android:gravity = "center"  
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor = "@color/textclient" />
                    <TextView
                        android:text=""
                        android:textColor="@color/colorMainBlue"
                        android:layout_weight="1"
                        android:textSize="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity = "center"              
                        android:id="@+id/TaskManagementTextIdValue1" />
                </LinearLayout>  
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/TaskManagementLinearId1"
                    android:background="@color/colorMainLightBlue"/>

                <TextView
                    android:text="Датчики"
                    android:layout_marginTop="8dp"
                    android:textSize="18dp"
                    android:textColor = "@color/textclient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal = "true"
                    android:layout_below = "@+id/TaskManagementLinearId1"
                    android:id="@+id/OrderManagementTextSensorsCenter1" />
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_stili"
                    android:padding = "5dp"
                    android:id="@+id/OrderManagementScrollSensors1"
                    android:layout_below = "@+id/OrderManagementTextSensorsCenter1">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation = "horizontal">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation = "vertical">
                                <TextView
                                    android:text="Батарея, %"
                                    android:layout_gravity="center"
                                    android:textColor = "@color/textclient"
                                    android:textSize="15dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:textSize="13dp"
                                    android:textColor="@color/colorMainLightBlue"
                                    android:background="@drawable/button_stili"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:id="@+id/OrderManagementTexBattery1"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft = "14dp"
                                android:orientation = "vertical">
                                <TextView
                                    android:text="Вес, кг"
                                    android:textSize="15dp"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor = "@color/textclient"/>
                                <TextView
                                    android:textSize="13dp"
                                    android:textColor="@color/colorMainLightBlue"
                                    android:background="@drawable/button_stili"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:id="@+id/OrderManagementTexWeight1" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft = "14dp"
                                android:orientation = "vertical">
                                <TextView
                                    android:text="Температура, C°"
                                    android:layout_gravity="center"
                                    android:textSize="15dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor = "@color/textclient"/>
                                <TextView
                                    android:textColor="@color/colorMainLightBlue"
                                    android:background="@drawable/button_stili"
                                    android:textSize="13dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity = "center"
                                    android:id="@+id/OrderManagementTextTemperature1" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft = "14dp"
                                android:orientation = "vertical">
                                <TextView
                                    android:text="Влажность, %"
                                    android:textSize="15dp"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor = "@color/textclient" />
                                <TextView                                  
                                    android:textColor="@color/colorMainLightBlue"
                                    android:background="@drawable/button_stili"
                                    android:textSize="13dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity = "center"
                                    android:id="@+id/OrderManagementTextHumidity1" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft = "14dp"
                                android:orientation = "vertical">
                                <TextView
                                    android:text="Освещенность, лм"
                                    android:layout_gravity="center"
                                    android:textSize="15dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor = "@color/textclient" />
                                <TextView
                                    android:textColor="@color/colorMainLightBlue"
                                    android:background="@drawable/button_stili"
                                    android:textSize="13dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity = "center"
                                    android:id="@+id/OrderManagementTextIllumination1" />
                            </LinearLayout>                   
                    </LinearLayout>
                </HorizontalScrollView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/OrderManagementScrollSensors1"
                    android:id="@+id/OrderManagementLinearOrderState1"
                    android:orientation="horizontal">               
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation = "vertical"
                        android:layout_alignParentRight = "true">
                        <TextView
                            android:text="Состояние"
                            android:textSize="15dp"
                            android:textColor = "@color/textclient"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity = "center"/>
                        <TextView
                            android:text=""
                            android:textSize="13dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity = "center"            
                            android:id="@+id/OrderManagementTextState1" />
                    </LinearLayout>
                     <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation = "vertical">
                        <TextView
                            android:text="Ролета"
                            android:textSize="15dp"
                            android:textColor = "@color/textclient"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity = "center"/>
                        <TextView
                            android:text=""
                            android:textSize="13dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity = "center"            
                            android:id="@+id/OrderManagementTextRoleta1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation = "vertical">
                        <TextView
                            android:text="Замок"
                            android:textSize="15dp"
                            android:textColor = "@color/textclient"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity = "center"/>
                        <TextView
                            android:text=""
                            android:textSize="13dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity = "center"            
                            android:id="@+id/OrderManagementTextCastle1" />
                    </LinearLayout>
                   
                </LinearLayout>
                

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop = "10dp"
                    android:layout_marginRight = "20dp"
                    android:orientation = "vertical"
                    android:layout_centerHorizontal = "true"
                    android:id = "@+id/OrderManagementLinearEvents1"
                    android:layout_below = "@+id/OrderManagementLinearOrderState1">
                    <TextView
                        android:text="События"
                        android:textSize="18dp"
                        android:textColor = "@color/textclient"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity = "center"
                        android:minWidth="25px"
                        android:minHeight="25px"/>
                    <TextView
                        android:text=""
                        android:textColor="@color/colorMainBlue"
                        android:textSize="13dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity = "center"            
                        android:id="@+id/OrderManagementTextEvents1" />


                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_below="@+id/OrderManagementLinearEvents1"
                    android:background="@color/colorMainLightBlue"/>
            </RelativeLayout>


