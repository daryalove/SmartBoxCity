<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content_main"
	android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id = "@+id/scrollView1"
        android:minHeight = "25px"
        android:minWidth = "25px"
        >
        
    <RelativeLayout
      
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical">
          <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textSize = "30sp"
				android:gravity="center"
				android:layout_marginTop = "100dp"
				android:textColor = "#20B2AA"
				android:text = "SmartBoxCity"
                android:id="@+id/title_bg"/> 
		  <LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:orientation="vertical"
				android:padding="32dp"				
				android:background = "@drawable/activity_stili"
				android:layout_below="@+id/title_bg"
				android:id="@+id/main_form"
				>
                
		  <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
				 android:id = "@+id/Text"
				 android:textSize = "15sp"
			     android:padding = "2dp"
				 android:gravity="center"
				 android:textStyle="bold"					
				 android:background = "@drawable/edittext_stili"
				 android:text = "Инновационный проект для оптимизации рынка транспортно-логистических услуг в условиях урбанизированной среды."
				/>
          <Button
				android:text="Оформить заказ"
				android:layout_width="fill_parent"
				android:layout_height="45dp"
				android:layout_marginTop="20dp"
			    android:padding = "5dp"
				android:textSize = "16sp"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:background="@drawable/button_stili"
				android:id="@+id/btn_calculate" />              
	      </LinearLayout>
    </RelativeLayout>
        </ScrollView>

</RelativeLayout>