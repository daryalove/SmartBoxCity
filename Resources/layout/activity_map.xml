<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background = "@drawable/activity_stili"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ui.login.LoginActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">

             <TextView
                android:text="Местоположение"
                android:textColor = "#2C4C46"
                android:layout_centerHorizontal = "true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TextViewMapHaupt" /> 
            
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below = "@+id/TextViewMapHaupt"
                android:layout_marginTop = "10dp">

                <LinearLayout
                    android:orientation = "vertical"
                    android:layout_margin = "10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop = "10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation = "horizontal">
                        <TextView
                            android:textColor = "@color/textclient"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="left|center_vertical"
                            android:layout_weight="3"
                            android:padding="1dp"
                            android:text="Откуда:"
                            android:textSize="12sp"
                            />
                        <TextView
                            android:id="@+id/MapTextFrom"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:textSize="10sp"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background = "@color/colorMainLightBlue"
                    />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation = "horizontal">
                         <TextView
                            android:textColor = "@color/textclient"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="left|center_vertical"
                            android:layout_weight="3"
                            android:padding="1dp"
                            android:text="Куда:"
                            android:textSize="12sp"
                            />
                        <TextView
                            android:id="@+id/MapTextTo"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:textSize="10sp"
                            />

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background = "@color/colorMainLightBlue"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:orientation="horizontal">
                        
                        <LinearLayout
                            android:orientation="vertical"
                            android:gravity = "center"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">              
                            <TextView
                                android:textSize = "12dp"
                                android:padding="6dp"
                                android:gravity="right"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle = "normal"
                                android:textColor="@color/textclient"
                                android:text="Вес"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft = "10dp"
                                android:background="@color/colorMainLightBlue"/>
                            <TextView
                                android:textSize = "11dp"
                                android:layout_margin="3dp" 
                                android:textColor ="#FFFFFF"
                                android:background="@drawable/button_stili"
                                android:gravity="center"
                                android:layout_weight="2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/MapTextWeight" />
                      
                        </LinearLayout>  
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorMainLightBlue"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:gravity = "center"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                
                            <TextView
                                android:textSize = "12dp"
                                android:padding="6dp"                                
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:textColor="@color/textclient"
                                android:text="ДхШхВ"/>
                             <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginRight = "10dp"
                                android:background="@color/colorMainLightBlue"/>
                            <TextView
                                android:textSize = "11dp"
                                android:textColor ="#FFFFFF"
                                android:layout_margin="5dp"
                                android:background="@drawable/button_stili"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/MapTextLenhWidHeig" />                                                               
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background = "@color/colorMainLightBlue"/>

                    <com.google.android.gms.maps.MapView
                        android:id="@+id/FragmentMapUser"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop = "10dp"                       
                        class="com.google.android.gms.maps.MapFragment"/>
                        
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>